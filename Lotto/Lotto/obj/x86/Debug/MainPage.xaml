<Page
    x:Class="Lotto.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lotto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Name="root">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='3' Name="lottoInputGrid" Grid.Row="0" Padding="20" Background="#282833">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Din lottorad:" Grid.Column="0" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBox x:ConnectionId='11' Name="lotto1"                                 Width="80" Height="80" Grid.Column="1" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='12' Name="lotto2"                                 Width="80" Height="80" Grid.Column="2" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='13'                                 Name="lotto3" Width="80" Height="80" Grid.Column="3" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='14'                                 Name="lotto4" Width="80" Height="80" Grid.Column="4" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='15'                                 Name="lotto5" Width="80" Height="80" Grid.Column="5" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='16'                                 Name="lotto6" Width="80" Height="80" Grid.Column="6" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
            <TextBox x:ConnectionId='17'                                 Name="lotto7" Width="80" Height="80" Grid.Column="7" VerticalAlignment="Center" PlaceholderText="10" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center"></TextBox>
        </Grid>

        <Grid x:ConnectionId='4' Name="start" Grid.Row="1" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions> 
            <TextBlock Text="Antal dragningar:" Grid.Column="0" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBox x:ConnectionId='9'                                          Name="drawAmountBox" Height="80" Grid.Column="1" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" PlaceholderText="1000"></TextBox>
            <Button x:ConnectionId='10' Grid.Column="2" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                    >
                <TextBlock Text="Starta Lotto" FontSize="40" FontWeight="Bold"></TextBlock>
            </Button>
        </Grid>

        <Grid x:ConnectionId='5' Name="amount" Grid.Row="2" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="5 Rätt:" Grid.Column="0" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:ConnectionId='6' Name="fiveText" Text="10000" Grid.Column="1" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="6 Rätt:" Grid.Column="2" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:ConnectionId='7' Name="sixText" Text="10000" Grid.Column="3" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="7 Rätt:" Grid.Column="4" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:ConnectionId='8' Name="sevenText" Text="10000" Grid.Column="5" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
        </Grid>
        
    </Grid>
</Page>

