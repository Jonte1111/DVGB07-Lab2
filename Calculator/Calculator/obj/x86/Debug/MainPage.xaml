<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Name="root">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='3' Name="grid0" Grid.Row="0" Padding="20" Background="#282833">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:ConnectionId='24'  Name="input"  Grid.Column="0" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" PlaceholderText="0"></TextBox>
            <TextBlock x:ConnectionId='25'  Name="input2"  Grid.Column="1" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Text="0"></TextBlock>
        </Grid>

        <Grid x:ConnectionId='4' Name="grid1" Grid.Row="1" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='20' Name="one" Grid.Column="0" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="1"></TextBlock>
            </Button>
            <Button x:ConnectionId='21' Name="two" Grid.Column="1" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="2"></TextBlock>
            </Button>
            <Button x:ConnectionId='22' Name="three" Grid.Column="2" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="3"></TextBlock>
            </Button>
            <Button x:ConnectionId='23' Name="plus" Grid.Column="3" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="+"></TextBlock>
            </Button>
        </Grid>

        <Grid x:ConnectionId='5' Name="grid2" Grid.Row="2" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='16' Name="four" Grid.Column="0" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="4"></TextBlock>
            </Button>
            <Button x:ConnectionId='17' Name="five" Grid.Column="1" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="5"></TextBlock>
            </Button>
            <Button x:ConnectionId='18' Name="six" Grid.Column="2" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="6"></TextBlock>
            </Button>
            <Button x:ConnectionId='19' Name="minus" Grid.Column="3" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="-"></TextBlock>
            </Button>

        </Grid>
        <Grid x:ConnectionId='6' Name="grid3" Grid.Row="3" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='12' Name="seven" Grid.Column="0" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="7"></TextBlock>
            </Button>
            <Button x:ConnectionId='13' Name="eight" Grid.Column="1" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="8"></TextBlock>
            </Button>
            <Button x:ConnectionId='14' Name="nine" Grid.Column="2" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="9"></TextBlock>
            </Button>
            <Button x:ConnectionId='15' Name="multi" Grid.Column="3" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
                <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="*"></TextBlock>
            </Button>

        </Grid>
        <Grid x:ConnectionId='7' Name="grid4" Grid.Row="4" Background="#282833" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='8' Name="C" Grid.Column="0" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="C"></TextBlock>
            </Button>
            <Button x:ConnectionId='9' Name="zero" Grid.Column="1" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock  Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="0"></TextBlock>
            </Button>
            <Button x:ConnectionId='10' Name="equals" Grid.Column="2" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="="></TextBlock>
            </Button>
            <Button x:ConnectionId='11' Name="div" Grid.Column="3" Width="300" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="10"                   >
            <TextBlock Height="80" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Text="/"></TextBlock>
            </Button>

        </Grid>



    </Grid>
</Page>

